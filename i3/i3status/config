# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 1
}

order += "cpu_usage"
order += "load"
order += "memory"
# order += "ipv6"
# order += "wireless _first_"
order += "wireless name"
# order += "ethernet _first_"
order += "battery 0"
order += "tztime local"
order += "volume master"

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = "CPU %usage"
        max_threshold = 85
}

wireless name {
        format_up = "W: %essid[%quality]"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

load {
        format = "%1min"
}

memory {
        format = "Used: %used | Free: %available"
        threshold_degraded = "5G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%b-%d %H:%M"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = ""
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}
