# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 1
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
# order += "wireless _first_"
order += "battery 0"
order += "volume master"
order += "tztime local"

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = "  %usage"
        max_threshold = 85
}

wireless _first_ {
        format_up = "🛜: %quality"
        format_down = "🛜: down"
}

memory {
        format = ": %used / %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%b-%d %H:%M"
}

battery 0 {
        format = "%status %percentage %remaining %consumption"
        format_down = ""
        status_chr = "󰂄"
        status_bat = "󰂀"
        status_unk = "󰂑"
        status_full = "󰁹"
        path = "/sys/class/power_supply/BAT%d/uevent"
        threshold_type = "time"
        low_threshold = 10
        # last_full_capacity=true
        hide_seconds=true
        integer_battery_capacity=true
}

cpu_temperature 0 {
		format = "%degrees °C"
		path = "/sys/class/thermal/thermal_zone0/temp"
}

