# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 1
        markup = "pango"
}

order += "volume master"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
# order += "wireless _first_"
# order += "ethernet _first_"
# order += "ethernet tailscale0"
order += "battery 0"
order += "tztime local"

volume master {
        format = "<span foreground='#383838'> </span><span foreground='#808080'>%volume</span>"
        format_muted = "󰖁 : %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = "<span foreground='#383838'></span><span foreground='#808080'>%usage</span>"
        max_threshold = 85
}

wireless _first_ {
        format_up = "%ip <span foreground='#383838'>󰖩</span>%frequency[%quality] %essid %bitrate"
        format_down = "󰖪 "
}

ethernet _first_ {
        format_up = "%ip <span foreground='#383838'>󰈀</span>(%speed)"
        format_down = "󰈂 "
}

ethernet tailscale0 {
        format_up = "<span foreground='#383838'>󰈀</span>: %ip (%speed)"
        format_down = "󰈂 "
}

memory {
        format = "<span foreground='#383838'></span>: <span foreground='maroon'>%used</span> <span foreground='#808080'>%available</span>"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "<span foreground='#383838'></span><span foreground='#808080'>%b-%d %H:%M</span>"
}

battery 0 {
        format = "<span foreground='#383838'>%status </span><span foreground='#808080'>%remaining %percentage, %consumption</span>"
        format_down = ""
        status_chr = "󰂄"
        status_bat = "󰂀"
        status_unk = "󰂑"
        status_full = "󰁹"
        path = "/sys/class/power_supply/BAT%d/uevent"
        threshold_type = "time"
        low_threshold = 15
        # last_full_capacity=true
        hide_seconds=true
        integer_battery_capacity=true
}

cpu_temperature 0 {
		format = "<span foreground='#383838'></span><span foreground='#808080'>%degrees °C</span>"
		path = "/sys/class/thermal/thermal_zone0/temp"
}
